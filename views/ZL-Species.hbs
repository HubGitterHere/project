<h1>Species</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each species.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, common_name, scientific_name, homeworld and age }}
        {{#each species}}
        <tr>
            <td>{{this.common_name}}</td>
            <td>{{this.scientific_name}}</td>

            {{! DELETE form }}
            <form id='delete_species_form'>
                <input type='hidden' name='delete_species_id' value='{{this.species_ID}}' />
                <input type='hidden' name='delete_species_name' value='{{this.common_name}} {{this.scientific_name}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Species</h2>
<form class='cuForm' id='create_species_form'>
    <label for='create_species_common_name'>Common Name: </label>
    <input type='text' name='create_species_common_name' id='create_species_common_name' required />

    <label for='create_species_scientific_name'>Scientific Name: </label>
    <input type='text' name='create_species_scientific_name' id='create_species_scientific_name' />

    <input type='submit' />
</form>

{{! UPDATE form }}
<h2>Update a Species</h2>
<form class='cuForm' id='update_species_form'>
    <label for='update_species_common_name'>Common Name: </label>
    <input type='text' name='update_species_common_name' id='update_species_common_name' required />

    <label for='update_species_scientific_name'>Scientific Name: </label>
    <input type='text' name='update_species_scientific_name' id='update_species_scientific_name' required />

    <input type='submit' />
</form>
