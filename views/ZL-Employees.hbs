<h1>Employees</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each people.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each people}}
        <tr>
            <td>{{this.employee_ID}}</td>
            <td>{{this.zoo_ID}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.role_ID}}</td>

            {{! DELETE form }}
            <form id='delete_employee_form'>
                <input type='hidden' name='delete_employee_id' value='{{this.employee_ID}}' />
                <input type='hidden' name='delete_employee_name' value='{{this.first_name}} {{this.last_name}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Register an Employee</h2>
<form class='cuForm' id='create_employee_form'>
    <label for='create_employee_fname'>First Name: </label>
    <input type='text' name='create_employee_first_name' id='create_employee_first_name' required />

    <label for='create_employee_last_name'>Last Name: </label>
    <input type='text' name='create_employee_last_name' id='create_employee_last_name' />
    
    <input type='submit' />
</form>

{{! UPDATE form }}
<h2>Update a Person</h2>
<form class='cuForm' id='update_person_form'>
    <label for='update_person_id'>Person to Update: </label>
    <select name='update_person_id' id='update_person_id' required>
        <option value='' disabled selected>Select a Person</option>
        {{#each people}}
        <option value='{{this.id}}' required>
            {{this.id}}
            -
            {{this.fname}}
            {{this.lname}}
        </option>
        {{/each}}
    </select>

    <label for='update_person_homeworld'>Homeworld: </label>
    <select name='update_person_homeworld' id='update_person_homeworld'>
        <option value='NULL' disabled selected>Select a Planet</option>
        <option value='NULL'>&lt; None &gt;</option>
        {{#each homeworlds}}
        <option value='{{this.id}}' required>
            {{this.name}}
        </option>
        {{/each}}
    </select>

    <label for='update_person_age'>Age: </label>
    <input type='number' name='update_person_age' id='update_person_age' min='0' />

    <input type='submit' />
</form>