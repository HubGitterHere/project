<h1>Enclosures</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each enclosures.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each enclosures}}
        <tr>
            <td>{{this.enclosure_type}}</td>

            {{! DELETE form }}
            <form id='delete_enclosure_form'>
                <input type='hidden' name='delete_enclosure_id' value='{{this.id}}' />
                <input type='hidden' name='delete_enclosure_name' value='{{this.fname}} {{this.lname}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Enclosure</h2>
<form class='cuForm' id='create_enclosure_form'>
    <label for='create_enclosure_fname'>Enclosure Type: </label>
    <input type='text' name='create_enclosure_fname' id='create_enclosure_fname' required />

    <input type='submit' />
</form>

{{! UPDATE form }}
<h2>Update a Enclosure</h2>
<form class='cuForm' id='update_enclosure_form'>
    <label for='update_enclosure_id'>Enclosure to Update: </label>
    <select name='update_enclosure_id' id='update_enclosure_id' required>
        <option value='' disabled selected>Select a Enclosure</option>
        {{#each people}}
        <option value='{{this.id}}' required>
            {{this.id}}
            -
            {{this.fname}}
            {{this.lname}}
        </option>
        {{/each}}
    </select>

    <label for='create_enclosure_fname'>Enclosure Type: </label>
    <input type='text' name='create_enclosure_fname' id='create_enclosure_fname' required />

    <input type='submit' />
</form>
