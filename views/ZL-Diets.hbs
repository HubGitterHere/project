<h1>Diets</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each diets.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each diets}}
        <tr>
            <td>{{this.diet_details}}</td>

            {{! DELETE form }}
            <form id='delete_diet_form'>
                <input type='hidden' name='delete_diet_id' value='{{this.id}}' />
                <input type='hidden' name='delete_diet_name' value='{{this.fname}} {{this.lname}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Diet</h2>
<form class='cuForm' id='create_diet_form'>
    <label for='create_diet_details'>Diet Details: </label>
    <input type='text' name='create_diet_details' id='create_diet_details' required />

    <input type='submit' />
</form>

{{! UPDATE form }}
<h2>Update a Diet</h2>
<form class='cuForm' id='update_diet_form'>
    <label for='update_diet_id'>Diet to Update: </label>
    <select name='update_diet_id' id='update_diet_id' required>
        <option value='' disabled selected>Select a Diet</option>
        {{#each people}}
        <option value='{{this.diet_ID}}' required>
            {{this.diet_ID}}
            -
            {{this.diet_details}}
        </option>
        {{/each}}
    </select>

    <label for='update_diet_details'>Diet Details: </label>
    <input type='text' name='update_diet_details' id='update_diet_details' required />

    <input type='submit' />
</form>
